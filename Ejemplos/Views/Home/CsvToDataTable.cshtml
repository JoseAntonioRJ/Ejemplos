@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "CsvToDataTable";
}
<div class="container w-50 my-5 p-5 rounded" style="background: #151757;">
    <div class="row">
        <div class="col d-flex align-items-center">
            <form asp-controller="Home" asp-action="CsvToDataTable" method="Post" enctype="multipart/form-data">
                <input type="file" name="postedFile" class="form-label-file text-white" id="archivo" accept=".csv" required onchange="validar()" />
                <input type="submit" class="btn btn-dark" id="Subir" name="Subir" value="Subir" />
            </form>
        </div>
    </div>
</div>


@if (Model != null)
{
    <div class="container my-5 p-5 rounded" style="background-color: #D3CFF6; ">
        <div class="row">
            <div class="col">
                <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                    <thead>
                        <tr>
                            @foreach (DataColumn dc in Model.Columns)
                            {
                                <th>@dc.ColumnName</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                @foreach (DataColumn dc in Model.Columns)
                                {
                                    <td>@dr[dc.ColumnName]</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
<script src="~/js/DataTable.js"></script>
<script src="~/js/CsvToDataTable.js"></script>

